alter table IS_PPA_ACAO
  add constraint PK_IS_PPA_ACAO primary key (CLIENTE,ANO,CD_PROGRAMA,CD_ACAO_PPA)
  using index 
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 72K
