alter table IS_PPA_SUBFUNCAO
  add constraint PK_IS_PPA_SUBFUNCAO primary key (CD_SUBFUNCAO)
  using index 
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 72K
    next 64K
    minextents 1
    maxextents unlimited
