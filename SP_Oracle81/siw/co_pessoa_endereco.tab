  SQ_TIPO_ENDERECO   NUMBER(18) not null,
  LOGRADOURO         VARCHAR2(60) not null,
  COMPLEMENTO        VARCHAR2(20),
  BAIRRO             VARCHAR2(30),
  SQ_CIDADE          NUMBER(18) not null,
  CEP                VARCHAR2(9),
  PADRAO             VARCHAR2(1) default 'N' not null
)
tablespace USERS
  pctfree 10
  pctused 40
  initrans 1
  maxtrans 255
  storage
  (
    initial 136K
    next 128K
    minextents 1
    maxextents 4096
