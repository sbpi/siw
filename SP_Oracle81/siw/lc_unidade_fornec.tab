alter table LC_UNIDADE_FORNEC
  add constraint FK_LCUNIFOR_COPES foreign key (CLIENTE)
  references CO_PESSOA (SQ_PESSOA);
alter table LC_UNIDADE_FORNEC
  add constraint CKC_ATIVO_LCUNIFOR
