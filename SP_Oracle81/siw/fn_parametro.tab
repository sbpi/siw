create table FN_PARAMETRO
(
  CLIENTE      NUMBER(18) not null,
  SEQUENCIAL   NUMBER(18) not null,
  ANO_CORRENTE NUMBER(4) not null,
  PREFIXO      VARCHAR2(10),
  SUFIXO       VARCHAR2(10)
)
tablespace SYSTEM
  pctfree 10
  pctused 40
  initrans 1
  maxtrans 255
  storage
  (
    initial 72K
    next 64K
    minextents 1
    maxextents unlimited
    pctincrease 50
  );
comment on table FN_PARAMETRO
  is 'Armazena parâmetros gerais sobre a gestão financeirada organização.';
comment on column FN_PARAMETRO.CLIENTE
  is 'Chave de CO_PESSOA que indica a que cliente do sistema o registro pertence.';
comment on column FN_PARAMETRO.SEQUENCIAL
  is 'Armazena o último número utilizado na geração automática de lançamentos financeiros.';
comment on column FN_PARAMETRO.ANO_CORRENTE
  is 'Ano no qual o sequencial está sendo incrementado.';
comment on column FN_PARAMETRO.PREFIXO
  is 'Prefixo do código dos lançamentos financeiros.';
comment on column FN_PARAMETRO.SUFIXO
  is 'Sufixo dos códigos dos lançamentos financeiros.';
alter table FN_PARAMETRO
  add constraint PK_FN_PARAMETRO primary key (CLIENTE)
  using index 
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 72K
    next 64K
    minextents 1
    maxextents unlimited
    pctincrease 50
  );
alter table FN_PARAMETRO
  add constraint FK_FNPAR_COPES foreign key (CLIENTE)
  references CO_PESSOA (SQ_PESSOA);

