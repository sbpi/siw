  check (PADRAO in ('S','N'));
alter table OR_ACAO_PPA
  add constraint CKC_SELECIONADA_MPOG_OR_ACAO_
  check (SELECIONADA_MPOG in ('S','N'));
alter table OR_ACAO_PPA
