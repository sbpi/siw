    pctincrease 50
  );
alter table OR_ACAO_PPA
  add constraint FK_ORACAPPA_ORACAPPA foreign key (SQ_ACAO_PPA_PAI)
  references OR_ACAO_PPA (SQ_ACAO_PPA);
alter table OR_ACAO_PPA
  add constraint CKC_ATIVO_EOTIPPOS
  check (ATIVO in ('S','N'));
alter table OR_ACAO_PPA
