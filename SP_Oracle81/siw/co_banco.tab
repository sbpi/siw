create table CO_BANCO
(
  SQ_BANCO NUMBER(18) not null,
  CODIGO   VARCHAR2(30) not null,
  NOME     VARCHAR2(30) not null,
  ATIVO    VARCHAR2(1) default 'S' not null,
  PADRAO   VARCHAR2(1) default 'N' not null
)
tablespace USERS
  pctfree 10
  pctused 40
  initrans 1
  maxtrans 255
  storage
  (
    initial 136K
    next 128K
    minextents 1
    maxextents 4096
    pctincrease 0
  );
comment on table CO_BANCO
  is 'Armazena a tabela de bancos';
comment on column CO_BANCO.SQ_BANCO
  is 'Sequence';
comment on column CO_BANCO.CODIGO
  is 'Código do banco. Está com tamanho acima do normal para aceitar bancos do exterior.';
comment on column CO_BANCO.ATIVO
  is 'Indica se o registro deve ou não ser exibido.';
comment on column CO_BANCO.PADRAO
  is 'Indica se este registro deve ser apresentado como padrão para o usuário.';
alter table CO_BANCO
  add constraint PK_CO_BANCO primary key (SQ_BANCO)
  using index 
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 136K
    next 128K
    minextents 1
    maxextents 4096
    pctincrease 0
  );
alter table CO_BANCO
  add constraint CKC_ATIVO_CO_BANCO
  check (ATIVO in ('S','N'));
alter table CO_BANCO
  add constraint CKC_PADRAO_COBAN
  check (PADRAO in ('S','N'));
create index IN_COBANCO_ATIVO on CO_BANCO (ATIVO)
  tablespace SYSTEM
