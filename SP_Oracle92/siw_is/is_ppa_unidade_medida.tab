create table IS_PPA_UNIDADE_MEDIDA
(
  CD_UNIDADE_MEDIDA NUMBER(18) not null,
  NOME              VARCHAR2(80) not null,
  ATIVO             VARCHAR2(1) default 'S' not null,
  FLAG_INCLUSAO     DATE default sysdate not null
)
tablespace SYSTEM
  pctfree 10
  pctused 40
  initrans 1
  maxtrans 255
  storage
  (
    initial 66K
    minextents 1
    maxextents unlimited
  );
comment on table IS_PPA_UNIDADE_MEDIDA
  is 'Padrão selecionado para mensurar a produção do bem ou serviço';
comment on column IS_PPA_UNIDADE_MEDIDA.CD_UNIDADE_MEDIDA
  is 'Código da Unidade de Medida';
comment on column IS_PPA_UNIDADE_MEDIDA.NOME
  is 'Descrição da Unidade de Medida';
comment on column IS_PPA_UNIDADE_MEDIDA.ATIVO
  is 'Indica se o registro pode ser associado a novos registros.';
comment on column IS_PPA_UNIDADE_MEDIDA.FLAG_INCLUSAO
  is 'Data de inclusão do registro';
alter table IS_PPA_UNIDADE_MEDIDA
  add constraint PK_IS_PPA_UNIDADE_MEDIDA primary key (CD_UNIDADE_MEDIDA)
  using index 
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 66K
    minextents 1
    maxextents unlimited
  );
alter table IS_PPA_UNIDADE_MEDIDA
  add constraint CKC_ISPPAUNIMED_ATIVO
  check (ATIVO in ('S','N'));

