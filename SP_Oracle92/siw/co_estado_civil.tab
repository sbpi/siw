create table CO_ESTADO_CIVIL
(
  SQ_ESTADO_CIVIL NUMBER(10) not null,
  NOME            VARCHAR2(50) not null,
  SIGLA           VARCHAR2(2) not null,
  ATIVO           VARCHAR2(1) default 'S' not null,
  CODIGO_EXTERNO  NUMBER(10)
)
tablespace SYSTEM
  pctfree 10
  pctused 40
  initrans 1
  maxtrans 255
  storage
  (
    initial 66K
    minextents 1
    maxextents unlimited
  );
comment on column CO_ESTADO_CIVIL.NOME
  is 'Descrição do Tipo de Estado Civil';
comment on column CO_ESTADO_CIVIL.ATIVO
  is 'Indicador da situação do tipo de estado civil, se estar Ativo ou não para utilização.';
comment on column CO_ESTADO_CIVIL.CODIGO_EXTERNO
  is 'Código que permitirá a vinculação com a codificação de um sistema externo.';
alter table CO_ESTADO_CIVIL
  add constraint PK_CO_ESTADO_CIVIL primary key (SQ_ESTADO_CIVIL)
  using index 
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 66K
    minextents 1
    maxextents unlimited
  );
alter table CO_ESTADO_CIVIL
  add constraint CKC_ATIVO_COESTCIV
  check (ATIVO in ('S','N'));
