create table CO_IDIOMA
(
  SQ_IDIOMA NUMBER(18) not null,
  NOME      VARCHAR2(20) not null,
  ATIVO     VARCHAR2(1) default 'S' not null,
  PADRAO    VARCHAR2(1) default 'N' not null
)
tablespace USERS
  pctfree 10
  initrans 1
  maxtrans 255
  storage
  (
    initial 132K
    minextents 1
    maxextents unlimited
  );
comment on table CO_IDIOMA
  is 'Armazena a tabela de idiomas';
alter table CO_IDIOMA
  add constraint PK_CO_IDIOMA primary key (SQ_IDIOMA)
  using index 
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 132K
    minextents 1
    maxextents unlimited
  );
alter table CO_IDIOMA
  add constraint CKC_ATIVO_CO_IDIOM
  check (ATIVO in ('S','N'));
alter table CO_IDIOMA
  add constraint CKC_PADRAO_COIDI
  check (PADRAO in ('S','N'));
create index IN_COIDI_ATIVO on CO_IDIOMA (ATIVO)
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 66K
    minextents 1
    maxextents unlimited
  );
create unique index IN_COIDI_NOME on CO_IDIOMA (NOME)
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 66K
    minextents 1
    maxextents unlimited
  );
create index IN_COIDI_PADRAO on CO_IDIOMA (PADRAO)
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 66K
    minextents 1
    maxextents unlimited
  );

