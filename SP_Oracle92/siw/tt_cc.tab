  );
create index IN_TTCC_DESATIV on TT_CC (CLIENTE,SQ_CENTRAL_FONE,DESATIVACAO,SQ_CC)
  tablespace SYSTEM
  pctfree 10
  initrans 2
  maxtrans 255
  storage
